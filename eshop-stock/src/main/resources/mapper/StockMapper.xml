<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rolex.eshop.dao.mapper.StockMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.rolex.eshop.model.Stock">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="num" property="num" />
    </resultMap>

    <update id="updateStock">
        update product_stock set num=#{stock.num} where id=#{stock.id}
    </update>

    <select id="findById" resultType="com.rolex.eshop.model.Stock">
        select project_stock where id=#{id}
    </select>

</mapper>
